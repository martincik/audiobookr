<section id="audiobooks">
<% if @audio_books.empty? -%>
  <p>No results found! Please, try again.</p>
<% else -%>
  <% @audio_books.each do |audio_book| -%>
  <article class="audiobook"> 
    <header>
      <img src="<%= audio_book.thumb_nail_url %>" alt="<%= audio_book.name %> - Thumbnail" />
      <h1><%= audio_book.name %></h1>
    </header>
    <strong>Category:</strong> <%= audio_book.categories.first.get_path.map(&:name).join(' > ') unless audio_book.categories.empty? %><br />
    <strong>Author(s), Publisher:</strong> <%= audio_book.author %>, <%= audio_book.publisher %><br />
    <strong>Price:</strong> <%= audio_book.our_price %> <%= audio_book.currency %>
    <p>
      <%= audio_book.short_description %>
    </p>
  </article>
  <% end -%>
<% end -%>
</section>